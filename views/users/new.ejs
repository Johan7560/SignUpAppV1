<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center mt-5">New User</h1>
  <div class="col-6 offset-3 mt-3">
    <form action="/users" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="user[name]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="text" id="email" name="user[email]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="text" id="password" name="user[password]" />
      </div>
      <div class="mb-3 text-center">
        <button type="submit" class="btn btn-info text-light">Sign Up</button>
      </div>
    </form>
  </div>
</div>
