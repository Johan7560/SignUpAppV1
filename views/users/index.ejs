<% layout('layouts/boilerplate')%>
<h1>All Users</h1>

<div class="row">
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">ID</th>
        </tr>
      </thead>

      <% for (let user of users){%>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user._id %></td>
        </tr>
      </tbody>
      <% }%>
    </table>
    <div class="mb-3 text-center">
      <a href="/users/new" class="btn btn-primary">Back To Sign Up Page</a>
    </div>
  </div>
</div>
